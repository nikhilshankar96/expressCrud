<h3> List of people &nbsp; <a href="/ppl" class="btn btn-secondary"> <i class="fa fa-plus"></i> Add </a></h3>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Email</th>
			<th>Password</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each list}}
		<tr>
			<td>{{this.email}}</td>
			<td>
				{{this.password}}
			</td>
			<td>
				<a href="/ppl/{{this._id}}"> <i class="fa fa-edit fa-lg" aria-hidden="true"></i></a>
				&nbsp;&nbsp;&nbsp;
				<a href="/ppl/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this?');"> <i
						class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>